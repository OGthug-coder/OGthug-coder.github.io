{
  "swagger": "2.0",
  "info": {
    "title": "rap-api",
    "version": "v2"
  },
  "paths": {
    "/api/hits": {
      "get": {
        "operationId": "getHits",
        "summary": "Get hits",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/api/search": {
      "post": {
        "operationId": "searchSongs",
        "summary": "Search songs by query string",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Object, that contains query string",
            "required": true,
            "schema": {
              "$ref": "#definitions/Query"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/api/song": {
      "post": {
        "operationId": "getSongText",
        "summary": "Get song text",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Represents the desired song",
            "required": true,
            "schema": {
              "$ref": "#definitions/Song"
            }

          }
        ],
        "produces": "application/json",
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    }
  },
  "definitions": {
    "Query": {
      "required": [
        "q"
      ],
      "properties": {
        "q": {
          "type": "string",
          "example": "Eminem 8 mile"
        }
      }
    },
    "Song": {
      "required": [
        "title",
        "artist",
        "img",
        "url"
      ],
      "properties": {
        "title": {
          "type": "string",
          "example": "Calling My Phone"
        },
        "artist": {
          "type": "string",
          "example": "Lil Tjay & 6LACK"
        },
        "img": {
          "type": "string",
          "example": "https://images.genius.com/fc8e5be6abd4ed20c58822c698c07387.300x300x1.png"
        },
        "url": {
          "type": "string",
          "example": "https://genius.com/Lil-tjay-and-6lack-calling-my-phone-lyrics"
        }
      }
    }
  },
  "consumes": [
    "application/json"
  ]
}